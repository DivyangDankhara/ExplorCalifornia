@using ExplorCalifornia.Models;

@model Post
@{ 
    Layout = "_layout";
}

<h1>Create Blog</h1>

<fieldset>

    @using (Html.BeginForm())
    {
        <p>
            @Html.LabelFor(x=> x.Title)
            @Html.EditorFor(x => x.Title)
        </p>
        
        <p>
            @Html.LabelFor(x=> x.Body)
            @Html.TextAreaFor(x => x.Body)
        </p>

        <p>
            <button type="submit">Create Post</button>
        </p>
    }

</fieldset>